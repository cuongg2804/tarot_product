extends ../layouts/default.pug

block main
 .container.my-5
  h1.text-center.mb-4 Tarot Reading
  .row
    .col-md-6.offset-md-3
      .mb-3
        label.form-label(for='questionInput') Enter your question:
        input#questionInput.form-control(type='text' placeholder="What's on your mind?" aria-describedby='questionHelp')
        #questionHelp.form-text Type your question or problem for the tarot reading.
      button#shuffleDrawBtn.btn.btn-primary.w-100.mb-4 Shuffle &amp; Draw
  #cardContainer.row
    .col-md-4.mb-4
      .card.tarot-card
        img.card-img-top(src='https://images.unsplash.com/photo-1635314987854-a54ecdfe01be' alt='Tarot Card 1')
        .card-body
          h5.card-title Card 1
    .col-md-4.mb-4
      .card.tarot-card
        img.card-img-top(src='https://images.unsplash.com/photo-1635314987854-a54ecdfe01be' alt='Tarot Card 2')
        .card-body
          h5.card-title Card 2
    .col-md-4.mb-4
      .card.tarot-card
        img.card-img-top(src='https://images.unsplash.com/photo-1635314987854-a54ecdfe01be' alt='Tarot Card 3')
        .card-body
          h5.card-title Card 3
  #errorMessage.alert.alert-danger.d-none(role='alert')

